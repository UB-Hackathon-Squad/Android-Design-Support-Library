<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">#2472E8</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">#244C98</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">#FF2A28</item>
        <!--Color of text in the app-->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <!--Background color of all activities-->
        <item name="android:windowBackground">@color/windowBG</item>
        <!-- If you want to display Drawer to Arrow transition -->
        <!--<item name="drawerArrowStyle">@style/DrawerArrowStyle</item>-->
        <item name="android:textColor">#5f5f5f</item>

    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
    </style>

</resources>






