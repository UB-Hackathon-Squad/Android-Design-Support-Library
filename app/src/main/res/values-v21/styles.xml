<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--https://developer.android.com/training/material/theme.html-->
    <!--http://www.google.co.in/design/spec/style/color.html#color-ui-color-application-->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">#2472E8</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">#244C98</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">#FF2A28</item>
        <!--Color of text in the app-->
        <!--<item name="android:textColorPrimary">@color/textColorPrimary</item>-->
        <!--Background color of all activities-->
        <item name="android:windowBackground">@color/windowBG</item>
        <!--The color soft NavigationBar that has home button-->
        <item name="android:navigationBarColor">#2472E8</item>
        <!-- If you want to display Drawer to Arrow transition -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!--<item name="android:textColor">@color/material_blue_grey_800</item>-->
        <!--<item name="android:textColorSecondary">@android:color/primary_text_dark</item>-->

    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
    <item name="spinBars">true</item>
    <item name="color">@android:color/white</item>
    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
    </style>
</resources>